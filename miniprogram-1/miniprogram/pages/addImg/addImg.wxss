/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.input-item {
  background: #fff;
  margin-top: 10px;
  width: 100%;
  /* padding: 0 10px; */
}
.form-box {
  width: 100%;
}
.input-item-title {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}
.input-item-input input {
  padding: 10px;
}
.btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  border-top: 1px solid #ddd;
  padding: 0;
}
.btn-area view {
  width: 50%;
}
.btn-area button {
  border-radius: 0;
  padding: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  margin-left: 0;
  margin-right: 0;
}
.btn-area-reset {
  background: #ddd;
}
.btn-area-submit {
  background: #007aff;
}
.btn-area-reset button {
  color: #666;
  font-weight: normal;
}
.btn-area-submit button {
  color: #fff;
  font-weight: normal;
}
.model-back {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}
.model {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 20%;
  height: 50%;
  background: #fff;
  border-radius: 4rpx;
}
.model image {
  width: 100%;
  height: 100%;
}
.preview-tit {
  border-bottom: 1px solid #ddd;
  padding: 10px;
  position: relative;
}
.preview-tit icon {
  position: absolute;
  top: 10px;
  right: 10px;
}
.preview-con {
  width: 100%;
  height: 100%;
  overflow: auto;
}